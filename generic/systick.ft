$E000E010 CONSTANT STCTRL
$E000E014 CONSTANT STRELOAD
$E000E018 CONSTANT STCURRENT

VARIABLE SYSTICKS/TICK
VARIABLE TICKS

: SYSTICK-IRQ   1 TICKS +! ;
: SYSTICK-ENABLE
    ['] SYSTICK-IRQ IVT $0F CELLS + !
    0 TICKS !
    SYSTICKS/TICK @ STRELOAD !
    7 STCTRL !
;

: SYSTICK-DISABLE   0 STCTRL ! ;

